<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wonderfulparty"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.wonderfulparty.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.wonderfulparty.animal.TweenAnimal"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.wonderfulparty.animal.FrameActivity"
            android:label="@string/title_activity_frame" >
        </activity>
        <activity
            android:name="com.example.wonderfulparty.animal.LayoutAnimal"
            android:label="@string/title_activity_layout_animal" >
        </activity>
        <activity
            android:name="com.example.wonderfulparty.animal.MyObjectAnimator"
            android:label="@string/title_activity_object_animator" >
        </activity>
    </application>

</manifest>